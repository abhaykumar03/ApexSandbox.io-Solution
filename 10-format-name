public String formatName(String firstName, String lastName) {
 if (String.isNotBlank(lastName) && String.isNotBlank(firstName)) return lastName + ', '+ firstName;

    else if (String.isNotBlank(lastName) && String.isBlank(firstName)) return lastName;

    else if (String.isBlank(lastName) && String.isNotBlank(firstName)) return firstName;

    else return '';
}