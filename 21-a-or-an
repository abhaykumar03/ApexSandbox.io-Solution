public String aOrAn(String word) {
   String givenIp;
   word = word.toLowerCase();
    if (
            word.startsWith('a') || 
            word.startsWith('e') || 
            word.startsWith('i') || 
            word.startsWith('o') || 
            word.startsWith('u')
        ) {
        givenIp = 'An' + ' ' + word;
    } 
    else {
        givenIp = 'A' + ' ' + word;
    }
    return givenIp;
}