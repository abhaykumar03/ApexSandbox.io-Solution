public String aOrAn(String word) {
   String result;
   word = word.toLowerCase();
    if (
            word.startsWith('a') || 
            word.startsWith('e') || 
            word.startsWith('i') || 
            word.startsWith('o') || 
            word.startsWith('u')
        ) {
       result = 'an ' + word;
    } 
    else {
       result = 'a ' + word;
    }
    return result;
}