    insert cr;

    cr = [Select Id, Name from apxio__Course__c];

    apxio__Class__c cl = new apxio__Class__c();
    cl.Id = cr.Id;
    cl.Name = cr.Name;
    String sizeString = cr.apxio__Course_Details__c;
    if(sizeString.length() > 255 ){
    sizeString = sizeString.substring(0, 255);
    cl.apxio__Description__c = cr.apxio__Course_Details__c;
    insert cl;
    }
    return;
}

